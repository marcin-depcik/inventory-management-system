{
    "name": "inventory-management-system",
    "version": "0.0.1",
    "description": "Simple inventory management system application",
    "scripts": {
        "dev": "nodemon",
        "start": "node dist/src/main.js",
        "build": "rm -rf dist && tsc",
        "lint": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "clean": "rm -rf dist coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marcin-depcik/inventory-management-system.git"
    },
    "keywords": [],
    "author": "Marcin Depcik",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/marcin-depcik/inventory-management-system/issues"
    },
    "homepage": "https://github.com/marcin-depcik/inventory-management-system#readme",
    "dependencies": {
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "http-status-codes": "^2.3.0",
        "inversify": "^6.2.1",
        "mongoose": "^8.9.5",
        "reflect-metadata": "^0.2.2",
        "uuid": "^11.0.5",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.5",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
